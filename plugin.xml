<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="test-case-executor.actionSet">
         <menu
               label="My &amp;Plugin"
               id="myPlugin">
            <separator
                  name="myGroup">
            </separator>
         </menu>
         <action
               label="&amp;Run Test Cases"
               icon="icons/sample.gif"
               class="testcaseexecutor.actions.SampleAction"
               tooltip="Run a project with test cases"
               menubarPath="myPlugin/myGroup"
               toolbarPath="myGroup"
               id="testcaseexecutor.actions.SampleAction">
         </action>
      </actionSet>
   </extension>

</plugin>
